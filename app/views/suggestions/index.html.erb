<p id="notice"><%= notice %></p>

<h1>Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Square</th>
      <th>City</th>
      <th>Address</th>
      <th>Owner</th>
      <th>Category</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.description %></td>
        <td><%= suggestion.price %></td>
        <td><%= suggestion.square %></td>
        <td><%= suggestion.city %></td>
        <td><%= suggestion.address %></td>
        <td><%= suggestion.owner %></td>
        <td><%= suggestion.category %></td>
        <td><%= suggestion.flat_type %></td>
        <td><%= link_to 'Show', suggestion %></td>
        <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
        <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_suggestion_path %>
